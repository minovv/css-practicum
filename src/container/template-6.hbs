<header class="header">
			<div>
			{{> logo}}
			</div>
			<nav class="header_nav">
				<div class="header_nav_right">
				{{> nav list=header}}
				</div>			
			</nav>
		</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	{{/with}}
	</div>
	
	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" 
			id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="checkbox_name" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
	<div class="updates">
		<h1 class="updates_title">{{title}}</h1>
		{{#each list}}
		<div class="upd">
			<strong class="upd_nickname">{{nickname}}</strong>
			<p class="upd_text">{{description}}</p>
		</div>
		{{/each}}
		<a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
	</div>
	{{/with}}

	
{{#with expirience}}
<div class="expirience_section">
		<div>
			<h2 class="expirience_title">{{title}}</h2>
		</div>
		<div>
			<span class="hot">{{badge}}</span>
		</div>
</div>
<div class="expirience">
	{{#each list}}
	<div>
		<strong>{{name}}</strong>
		<p>{{details}}</p>
	</div>
	{{/each}}
</div>
{{/with}}
	
			
	<footer class="footer">
		<div>
			{{> logo}}
			<span class="footer_copyright">Copyright &copy; 2023-2024</span>
		</div>
		{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}	
		</div>
		{{/each}}
	</footer>
	